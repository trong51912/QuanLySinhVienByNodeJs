<!DOCTYPE html>
<html lang="en">
  <%- include('../includes/head') -%>
  <body>
    <%- include('../includes/header') -%> 
    
    <%- include('../includes/sidebar') -%> 

    <div class="page-wrapper">
      <div class="content container-fluid">

        <!-- PAGE-HEADER AREA-->
        <div class="page-header">
          <div class="row align-items-center">
            <div class="col">
              <h3 class="page-title">Students</h3>
              <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="/student">Students</a></li>
                <li class="breadcrumb-item active">Student Search</li>
              </ul>
            </div>
            <div class="col-auto text-right float-right ml-auto">
              <a href="/student/add-student" class="btn btn-primary"
                ><i class="fas fa-plus"></i
              ></a>
            </div>
          </div>
        </div>

        <!-- TABLE AREA-->
        <div class="row">
          <div class="col-sm-12">
            <div class="card card-table">
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-hover table-center mb-0 datatable">
                    <thead>
                      <tr>
                        <th>STT</th>
                        <th>Name</th>
                        <th>Class</th>
                        <th>Gender</th>
                        <th>DOB</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th class="text-right">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                    <% result.forEach(function(item, index) { %>
                      <tr>
                        <td><%= index + 1 %></td>
                        <td>
                          <h2 class="table-avatar">
                            <a
                              href="/student/detail-student/<%= item._id %>"
                              class="avatar avatar-sm mr-2"
                            >
                              <img
                                class="avatar-img rounded-circle"
                                src="/img/profiles/avatar-01.jpg"
                                alt="User Image"
                              />
                            </a>
                            <a href="/student/detail-student/<%= item._id %>"><%= item.name %></a>
                          </h2>
                        </td>
                        <% classes.forEach((cla)=>{%> 
                          <% if(cla._id.toString()===item.classId){%> 
                          <td><%= cla.name %></td>
                        <%}}) %>
                        <td><%= item.gender %></td>
                        <td><%= item.dob %></td> 
                        <td><%= item.phone %></td>
                        <td><%= item.address %></td>
                        <td class="text-right">
                          <div class="actions">
                            <a
                              href="student/update-student/<%= item._id %>"
                              class="btn btn-sm bg-success-light mr-2">
                              <i class="fas fa-pen"></i>
                            </a>
                            <a href="student/delete-student/<%= item._id %>" 
                              class="btn btn-sm bg-danger-light">
                              <i class="fas fa-trash"></i>
                            </a>
                          </div>
                        </td>
                      </tr>
                    <% });%>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>

    <%- include('../includes/footer'); -%>
  </body>
</html>
