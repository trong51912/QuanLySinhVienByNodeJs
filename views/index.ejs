<!DOCTYPE html>
<html lang="en">
    <%- include('./includes/head'); -%>
<body>
    <%- include('./includes/header'); -%>

    <%- include('./includes/sidebar'); -%>

    <div class="page-wrapper">
        <div class="content container-fluid">
           <div class="page-header">
              <div class="row">
                 <div class="col-sm-12">
                    <h3 class="page-title">Welcome Admin!</h3>
                    <ul class="breadcrumb">
                       <li class="breadcrumb-item active">Dashboard</li>
                    </ul>
                 </div>
              </div>
           </div>
           <div class="row">
            <div class="col-xl-3 col-sm-6 col-12 d-flex">
               <div class="card bg-one w-100">
                <a href="/student">
                  <div class="card-body">
                     <div class="db-widgets d-flex justify-content-between align-items-center">
                        <div class="db-icon">
                           <i class="fas fa-user-graduate"></i>
                        </div>
                        <div class="db-info">
                            <% var countStudent=0 %>
                            <% students.forEach((item) => {countStudent++}) %>
                            <h3><%= countStudent %></h3>
                           <h6>Students</h6>
                        </div>
                     </div>
                  </div>
                </a>
               </div>
            </div>
              <div class="col-xl-3 col-sm-6 col-12 d-flex">
                 <div class="card bg-two w-100">
                  <a href="/class">
                    <div class="card-body">
                       <div class="db-widgets d-flex justify-content-between align-items-center">
                          <div class="db-icon">
                             <i class="fas fa-crown"></i>
                          </div>
                          <div class="db-info">
                           <% var countClass=0 %>
                           <% classes.forEach((item) => {countClass++}) %>
                           <h3><%= countClass %></h3>
                             <h6>Classes</h6>
                          </div>
                       </div>
                    </div>
                  </a>
                 </div>
              </div>
              <div class="col-xl-3 col-sm-6 col-12 d-flex">
               <div class="card bg-three w-100">
                <a href="/department">
                  <div class="card-body">
                     <div class="db-widgets d-flex justify-content-between align-items-center">
                        <div class="db-icon">
                           <i class="fas fa-building"></i>
                        </div>
                        <div class="db-info">
                         <% var countDepartment=0 %>
                         <% departments.forEach((item) => {countDepartment++}) %>
                         <h3><%= countDepartment %></h3>
                           <h6>Department</h6>
                        </div>
                     </div>
                  </div>
                  </a>
               </div>
            </div>
              <div  class="col-xl-3 col-sm-6 col-12 d-flex">
               <div style="background-color: rgb(114, 231, 114);" class="card bg-one w-100">
                  <a href="/courses">
                  <div  class="card-body">
                     <div class="db-widgets d-flex justify-content-between align-items-center">
                        <div class="db-icon">
                           <i class="fas fa-book-open"></i>
                        </div>
                        <div class="db-info">
                         <% var countCourse=0 %>
                         <% cousers.forEach((item) => {countCourse++}) %>
                         <h3><%= countCourse %></h3>
                           <h6>Courses</h6>
                        </div>
                     </div>
                  </div>
               </a>
               </div>
            </div>
           </div>
           
        </div>
    
    <%- include('./includes/footer'); -%>
</body>
</html>